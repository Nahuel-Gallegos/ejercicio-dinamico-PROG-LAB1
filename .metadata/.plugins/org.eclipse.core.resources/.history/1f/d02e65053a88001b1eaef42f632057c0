#include <stdio.h>
#include <stdlib.h>
//pedir dos numeros, sumar e imprimir
int main(void)
{
	setbuf(stdout,NULL);

	int numero1;
	int numero2;
	int suma;

	printf("Ingrese el primer numero:\n");
	scanf("%d",numero1);
	printf("Ingrese el segundo numero:\n");
	scanf("%d",numero2);

	suma = numero1+numero2;

	printf("La suma de ambos numeros es %d.", suma);

	return EXIT_SUCCESS;
}
